@using System.Globalization;
@model ThuMuaHangWeb.Models.ViewModelProduct

@{
    ViewData["Title"] = "Index";
    int totalPages = ViewBag.TotalPages;
    int pageIndex = ViewBag.PageIndex;
}

@{
    var pagingModel = new PagingModel
            {
                currentPage = pageIndex,
                totalPages = totalPages,
                generateUrl = (int? p) => @Url.Action("Index", "Products", new { page = p })
            };
}

@inject SignInManager<ApplicationUser> SignInManager
@if(SignInManager.IsSignedIn(User) && !string.IsNullOrEmpty(User.FindFirstValue(ClaimTypes.Role)))
{
    <div class="banner">
        <div class="banner-text">
            <h1>Danh Mục Hàng Hóa</h1>
            <h5>Thời gian cập nhật: @ViewBag.LastUpdateTime</h5>
        </div>
    </div>
    <hr />
    <div class="row mt-3 mb-2">
        <div class="col-6 text-start">
            <a type="button" class="btn btn-outline-primary" asp-action="Create">Thêm hàng hóa </a>
        </div>
        <div class="col-6 text-end">
            <a id="SyncData" type="button" class="btn btn-outline-primary" asp-action="SyncData">Cập nhật tự động</a>
        </div>
    </div>
    <form method="Post" class="row mb-3" asp-controller="Products" asp-action="Index">
        <div class="row mb-3">
            <div class="col-12 col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row form-group mb-1">
                            <div class="col-12">
                                <input id="search" asp-for="@Model.SearchOption.SearchValue" class="form-control" placeholder="Nhập mã, tên hàng hóa" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="c0l-12 col-md-2">
                <div class="form-group row">
                    <div class="col-6">
                        <input class="w-100 btn btn-outline-primary" type="submit" value="Tìm kiếm" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="w-100 btn btn-outline-secondary">Xóa lọc</a>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Mã hàng hóa
                    </th>
                    <th>
                        Tên hàng hóa
                    </th>
                    <th>
                        Đơn vị tính
                    </th>
                    <th>
                        Thuế
                    </th>
                    <th>
                        Giá nhập gần nhất
                    </th>
                    <th>
                        Giá bán
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @if (item.Tax != null)
                            {
                                @item.Tax?.ToString("#0.##%", CultureInfo.InvariantCulture);
                            }
                        </td>
                        <td>
                            @item.LowestEntryPrice.ToString("#,##0")
                        </td>
                        <td>
                            @item.SalePrice?.ToString("#,##0")
                        </td>
                        @if (@item.Status == "A")
                        {
                            <td>Đang kinh doanh</td>
                        }
                        else
                        {
                            <td>Ngừng kinh doanh</td>
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId"><i class="fa fa-pencil-square-o"></i></a>  <span>&nbsp;</span>
                            <a href="#" id="@item.ProductId" data-product="@item.DisplayName" class="btnDelete text-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <partial name="_Paging" model="@pagingModel" />
        </div>
    </form>

    <!-- Modal -->
    <div class="modal fade" id="confirmModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-center">
                    <h1 class="modal-title fs-5" id="confirmModalLabel">Xác nhận</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn chắc chắn muốn xóa hàng hóa <span id="productTxt" class="fw-bold"></span>?
                </div>
                <div class="modal-footer">
                    <form id="delete-form" asp-action="Delete" class="row w-100 justify-content-center">
                        <input name="ProductId" id="ProductId" type="hidden" />
                        <button type="button" class="col-3 mx-1 btn btn-outline-secondary" data-bs-dismiss="modal">Trở lại</button>
                        <input type="submit" value="Xóa" class="col-3 mx-1 btn btn-outline-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        <script>
            $(document).ready(function () {
                $("#SyncData").click(() => {
                    $("#blockUI").show();
                });
                $('.btnDelete').click((event) => {
                    event.preventDefault();
                    const value = parseInt(event.currentTarget.id);
                    const text = event.currentTarget.dataset.product;
                    $('#ProductId').val(value);
                    $('#productTxt').html(text);
                    $('#confirmModal').modal('show');
                });
            });
        </script>
    }
}